<script>
    // Stream schedule (Pacific Time)
    const STREAM_SCHEDULE = {
        sunday: [
            { start: { hour: 9, minute: 30 }, end: { hour: 11, minute: 0 }, name: 'Sunday School' },
            { start: { hour: 11, minute: 0 }, end: { hour: 12, minute: 0 }, name: 'Memorial Service' }
        ],
        wednesday: [
            { start: { hour: 19, minute: 30 }, end: { hour: 20, minute: 30 }, name: 'Bible Study' }
        ]
    };

    function getPacificTime() {
        return new Date(new Date().toLocaleString('en-US', { timeZone: 'America/Los_Angeles' }));
    }

    function isStreamLive() {
        const now = getPacificTime();
        const day = now.getDay(); // 0 = Sunday, 3 = Wednesday
        const hour = now.getHours();
        const minute = now.getMinutes();
        const currentMinutes = hour * 60 + minute;

        let schedule = [];
        if (day === 0) schedule = STREAM_SCHEDULE.sunday;
        else if (day === 3) schedule = STREAM_SCHEDULE.wednesday;

        for (const slot of schedule) {
            const startMinutes = slot.start.hour * 60 + slot.start.minute;
            const endMinutes = slot.end.hour * 60 + slot.end.minute;
            
            if (currentMinutes >= startMinutes && currentMinutes < endMinutes) {
                return { live: true, service: slot.name };
            }
        }

        return { live: false };
    }

    function getNextStream() {
        const now = getPacificTime();
        const currentDay = now.getDay();
        const currentHour = now.getHours();
        const currentMinute = now.getMinutes();
        
        // Check if there's a service later today
        if (currentDay === 0) { // Sunday
            for (const slot of STREAM_SCHEDULE.sunday) {
                if (currentHour < slot.start.hour || 
                    (currentHour === slot.start.hour && currentMinute < slot.start.minute)) {
                    return { day: 'Sunday', time: formatTime(slot.start), service: slot.name };
                }
            }
        } else if (currentDay === 3) { // Wednesday
            for (const slot of STREAM_SCHEDULE.wednesday) {
                if (currentHour < slot.start.hour || 
                    (currentHour === slot.start.hour && currentMinute < slot.start.minute)) {
                    return { day: 'Wednesday', time: formatTime(slot.start), service: slot.name };
                }
            }
        }

        // Otherwise, find next upcoming service
        if (currentDay === 0 || currentDay === 1 || currentDay === 2) {
            return { day: 'Wednesday', time: formatTime(STREAM_SCHEDULE.wednesday[0].start), service: 'Bible Study' };
        } else {
            return { day: 'Sunday', time: formatTime(STREAM_SCHEDULE.sunday[0].start), service: 'Memorial Service' };
        }
    }

    function formatTime(timeObj) {
        const hour = timeObj.hour > 12 ? timeObj.hour - 12 : timeObj.hour;
        const period = timeObj.hour >= 12 ? 'PM' : 'AM';
        const minute = timeObj.minute.toString().padStart(2, '0');
        return `${hour}:${minute} ${period}`;
    }

    function updateLiveStatus() {
        const status = isStreamLive();
        const indicator = document.getElementById('liveIndicator');
        const videoContainer = document.getElementById('videoContainer');
        const offlineMessage = document.getElementById('offlineMessage');
        
        if (status.live) {
            indicator.className = 'livestream-hero__badge livestream-hero__badge--live';
            indicator.innerHTML = `
                <span class="livestream-hero__badge-dot"></span>
                <span class="livestream-hero__badge-text">LIVE NOW: ${status.service}</span>
            `;
            videoContainer.classList.add('livestream-player__video--live');
            offlineMessage.style.display = 'none';
        } else {
            indicator.className = 'livestream-hero__badge livestream-hero__badge--offline';
            indicator.innerHTML = `
                <span class="livestream-hero__badge-dot"></span>
                <span class="livestream-hero__badge-text">Stream Offline</span>
            `;
            videoContainer.classList.remove('livestream-player__video--live');
            offlineMessage.style.display = 'flex';
        }
    }

    function updateNextStreamInfo() {
        const next = getNextStream();
        const sundayNext = document.getElementById('sundayNext');
        const wednesdayNext = document.getElementById('wednesdayNext');

        if (next.day === 'Sunday') {
            sundayNext.innerHTML = `
                <div class="schedule-card__next-badge">
                    <span class="schedule-card__next-icon">▶</span>
                    Next Stream: ${next.time}
                </div>
            `;
            wednesdayNext.innerHTML = '';
        } else {
            wednesdayNext.innerHTML = `
                <div class="schedule-card__next-badge">
                    <span class="schedule-card__next-icon">▶</span>
                    Next Stream: ${next.time}
                </div>
            `;
            sundayNext.innerHTML = '';
        }
    }

    // Update status on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateLiveStatus();
        updateNextStreamInfo();
        
        // Update every minute
        setInterval(function() {
            updateLiveStatus();
            updateNextStreamInfo();
        }, 60000);
    });
</script>

