                        <div class="video-card__overlay">
                            <svg class="video-card__play-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
                                <path d="M8 5v14l11-7z"/>
                            </svg>
                        </div>
                    </div>
                    <h3 class="video-card__title">{{ video.title }}</h3>
                </a>
                {% endfor %}
            </div>
        </div>
        
        <div class="bible-unlocked__cta">
            <a href="https://www.youtube.com/@bibleunlocked/shorts" target="_blank" rel="noopener noreferrer" class="btn btn-outline">View All Videos</a>
        </div>
    </div>
</section>

